{
  "name": "Betta",
  "version": "1.0",
  "description": "Take care of your own betta fish by being productive!",
  "permissions": ["storage", "tabs"],
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js", "checkBlocklist.js"],
      "css": ["snackbar.css"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Betta",
    "default_icon": "images/logo.png"
  },
  "icons": {
    "128": "images/logo.png"
  }
}
